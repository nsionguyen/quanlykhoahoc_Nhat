<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ntn.quanlykhoahoc.controllers.Login">

    <Label style="-fx-font-family: 'Arial'; -fx-font-size: 20; -fx-font-weight: bold;" text="Đăng Nhập" />
    
    <TextField fx:id="emailField" promptText="Email" />
    
    <PasswordField fx:id="passwordField" promptText="Mật khẩu" />
    



    <Button text="Đăng nhập" styleClass="primary-button" onAction="#handleLogin" />
    
    <ComboBox fx:id="roleComboBox" />

     <Hyperlink text="Quên mật khẩu?" onAction="#handleForgotPassword" />
     
    <Hyperlink text="Chưa có tài khoản? Đăng ký" onAction="#handleRegister" />
    
    
</VBox>
